<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp">

    <RadioGroup
        android:id="@+id/radioType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioButtonProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Check Product Type" />

        <RadioButton
            android:id="@+id/radioButtonTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Televisions" />

        <RadioButton
            android:id="@+id/radioButtonHom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Audio Systems" />

        <RadioButton
            android:id="@+id/radioButtonAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accessories" />

        <RadioButton
            android:id="@+id/radioButtonSta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TV Stand" />

    </RadioGroup>
    <Button
        android:id="@+id/subPro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioType"
        android:background="@color/backy"
        android:text="submit"
        android:textColor="#fff" />

</RelativeLayout>