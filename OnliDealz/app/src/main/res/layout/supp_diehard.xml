<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:background="#DDCFCF"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/licen"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="15sp"
                android:text="Quantity:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editQuantity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="10sp"
                android:layout_toRightOf="@+id/licen"
                android:background="#fff"
                android:hint="Enter Your quantity."
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/unit"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/licen"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="15sp"
                android:text="UnitPrice:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editUnitPrice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/licen"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="10sp"
                android:layout_toRightOf="@+id/unit"
                android:background="#fff"
                android:hint="Enter Your price tag."
                android:inputType="number"
                android:maxLength="8"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/unit"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="15sp"
                android:text="Details:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editDescription"
                android:layout_width="280dp"
                android:maxWidth="279dp"
                android:layout_height="100dp"
                android:layout_below="@+id/unit"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="10sp"
                android:layout_toRightOf="@+id/desc"
                android:background="#fff"
                android:gravity="top"
                android:hint="Describe your product."
                android:inputType="text"
                android:maxLength="150"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="187dp"
                android:layout_height="187dp"
                android:layout_below="@+id/desc"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="90dp"
                android:layout_marginBottom="10sp" />

            <Button
                android:id="@+id/takePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desc"
                android:layout_marginTop="85dp"
                android:layout_toRightOf="@+id/imageView"
                android:text="Take Photo"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/browseImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/takePhoto"
                android:layout_toRightOf="@+id/imageView"
                android:text="Browse Image"
                android:textAllCaps="false" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Upload"
                android:id="@+id/upload"
                android:layout_below="@+id/browseImage"
                android:layout_toRightOf="@+id/imageView"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>