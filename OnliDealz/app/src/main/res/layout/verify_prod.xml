<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    android:background="#DDCFCF"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spnrStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp" />

            <EditText
                android:id="@+id/editComment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spnrStatus"
                android:visibility="gone"
                android:layout_marginTop="10sp"
                android:background="#fff"
                android:hint="Type some comment" />

            <EditText
                android:id="@+id/editPrice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editComment"
                android:layout_marginTop="10sp"
                android:background="#fff"
                android:visibility="gone"
                android:hint="Enter Price tag"
                android:inputType="number"
                android:maxLength="8" />

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editPrice"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:visibility="gone"
                android:background="#fff"
                android:drawableLeft="@drawable/produce"
                android:text=" Update Record "
                android:textAllCaps="false" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>


