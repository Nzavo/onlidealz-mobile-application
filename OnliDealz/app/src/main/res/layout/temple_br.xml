<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp">

    <RadioGroup
        android:id="@+id/radioType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioButtonProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Check Product Type" />

        <RadioButton
            android:id="@+id/radioButtonShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shower Heads" />

        <RadioButton
            android:id="@+id/radioButtonLau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laundry Bucket" />

        <RadioButton
            android:id="@+id/radioButtonHold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Holders &amp; Dispensers" />

    </RadioGroup>

    <Button
        android:id="@+id/subPro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioType"
        android:background="@color/backy"
        android:text="submit"
        android:textColor="#fff" />

</RelativeLayout>