<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp">

    <RadioGroup
        android:id="@+id/radioType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioButtonProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Check Product Type" />

        <RadioButton
            android:id="@+id/radioButtonFri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fridge" />

        <RadioButton
            android:id="@+id/radioButtonCook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gas Cooker" />

        <RadioButton
            android:id="@+id/radioButtonDisp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water Dispenser" />

        <RadioButton
            android:id="@+id/radioButtonKett"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kettle" />

        <RadioButton
            android:id="@+id/radioButtonBle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blender" />

        <RadioButton
            android:id="@+id/radioButtonToas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toaster" />

        <RadioButton
            android:id="@+id/radioButtonVac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vacuum Flask" />

        <RadioButton
            android:id="@+id/radioButtonClea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cleaning Tools" />

    </RadioGroup>

    <Button
        android:id="@+id/subPro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioType"
        android:background="@color/backy"
        android:text="submit"
        android:textColor="#fff" />

</RelativeLayout>